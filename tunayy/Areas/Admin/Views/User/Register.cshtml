@model tunayy.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Register User";
}

<div class="container-fluid">
    <a class="btn btn-orange mb-1" asp-action="Index" asp-controller="User">Go Back</a>
    <div class="card">
        <div class="card-header bg-orange">
            <h4 class="card-title text-white">Register User</h4>
        </div>
        <div class="card-body">
            <form asp-action="Register" asp-controller="User" asp-area="Admin">
                <div class="mb-2">
                    <label>First Name</label>
                    <input type="text" asp-for="Adi" class="form-control" />
                    <span asp-validation-for="Adi" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>Last Name</label>
                    <input type="text" asp-for="Soyadi" class="form-control" />
                    <span asp-validation-for="Soyadi" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>Email</label>
                    <input type="email" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>Kullanici Adi</label>
                    <input type="text" asp-for="KullaniciAdi" class="form-control" />
                    <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>Sifre</label>
                    <input type="password" asp-for="Sifre" class="form-control" />
                    <span asp-validation-for="Sifre" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <input type="checkbox" class="custom-checkbox" asp-for="AdminKontrol" />
                    <label>Is Admin?</label>
                </div>
                <div class="mb-2">
                    <button type="submit" class="btn btn-orange w-100">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .bg-orange {
        background-color: #fd7e14; /* Turuncu arka plan */
    }

    .btn-orange {
        background-color: #fd7e14 !important; /* Turuncu buton arka planı */
        border-color: #fd7e14 !important; /* Turuncu buton kenar rengi */
    }

        .btn-orange:hover {
            background-color: #e67e22 !important; /* Hover durumunda daha koyu turuncu */
            border-color: #e67e22 !important; /* Hover durumunda daha koyu turuncu kenar rengi */
        }

    .text-white {
        color: #ffffff; /* Beyaz metin rengi */
    }
</style>
