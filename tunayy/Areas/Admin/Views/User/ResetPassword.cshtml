@model tunayy.ViewModels.ResetPasswordVM

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container-fluid">
    <a class="btn btn-orange mb-1" asp-action="Index" asp-controller="User">Go Back</a>
    <div class="card">
        <div class="card-header bg-orange">
            <h4 class="card-title text-white">Password Reset</h4>
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="Id" />
            <form asp-action="ResetPassword" asp-controller="User" asp-area="Admin">
                <div class="mb-2">
                    <label>Username</label>
                    <input type="text" asp-for="KullaniciAdi" class="form-control" disabled />
                    <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>New Password</label>
                    <input type="password" asp-for="YeniSifre" class="form-control" />
                    <span asp-validation-for="YeniSifre" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>Confirm Password</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <button type="submit" class="btn btn-orange w-100">Reset password</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .bg-orange {
        background-color: #fd7e14; /* Turuncu arka plan */
    }

    .btn-orange {
        background-color: #fd7e14 !important; /* Turuncu buton arka planı */
        border-color: #fd7e14 !important; /* Turuncu buton kenar rengi */
    }

        .btn-orange:hover {
            background-color: #e67e22 !important; /* Hover durumunda daha koyu turuncu */
            border-color: #e67e22 !important; /* Hover durumunda daha koyu turuncu kenar rengi */
        }

    .text-white {
        color: #ffffff; /* Beyaz metin rengi */
    }
</style>
